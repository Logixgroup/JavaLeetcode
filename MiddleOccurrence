import java.util.*;
import java.lang.*;
import java.io.*;

class MiddleOccurrence
{
    
    public static int middleOccurrence (String str , char ch){
        
        List<Integer> list = new ArrayList<>();
       // int i = 0;
        for (int i = 0; i<str.length();i++){
            
            if(str.charAt(i)==ch){
                list.add(i);
            }
        } 
        
        int mid = list.size() / 2;
        return list.get(mid);
    }
	public static void main (String[] args) throws java.lang.Exception
	{
	 System.out.println(middleOccurrence("abcada",'a'));

	}
}
